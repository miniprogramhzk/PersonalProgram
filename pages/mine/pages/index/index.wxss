/* pages/mine/pages/index/index.wxss */
.page_body{
  background-color: #f5f5f5;
  height:100%;
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  z-index: 1;
  position: fixed;
}

::-webkit-scrollbar
{
width: 0;
height: 0;
color: transparent;
}

.head_me{
  height: 240rpx;
  background-color:blanchedalmond;
  z-index: 2;
}

.second_me{
  width: 100%;
  height: 240rpx;
  position: relative;
  --border: 1px solid purple;
}
.left_delta_me{
  height:0rpx;
    width:0rpx;
    overflow: hidden;
    font-size: 0;
    line-height: 0;
    --border-color:aqua aqua transparent transparent;
    border-style:solid;
    border-width:30rpx;
    border-top: 20rpx solid blanchedalmond;
    border-bottom: 20rpx solid transparent;
    border-right: 40rpx solid blanchedalmond;
    border-left: 20px solid transparent;
    position: absolute;
    z-index: 3;
}
.right_delta_me{
  height:0rpx;
    width:0rpx;
    overflow: hidden;
    font-size: 0;
    line-height: 0;
    --border-color:aqua aqua transparent transparent;
    border-style:solid;
    border-width:30rpx;
    border-top: 20rpx solid blanchedalmond;
    border-bottom: 20rpx solid transparent;
    border-right: 40rpx solid transparent;
    border-left: 20px solid blanchedalmond;
    --position: absolute;
    float: right;
    z-index: 3;
}

.bozy_me{
  width: 84%;
  height: 240rpx;
  border-radius: 10rpx;
  background-color: #fff;
  --border: 1px solid red;
  margin-left: 8%;
  position: absolute;
  z-index: 5;
  --display: none;
}
.buttom_me{
  width: 84%;
  height: 400rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin-left: 8%;
  margin-top: 20rpx;
}

.image_user_view_me{
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  background-color: #fff;
  z-index: 3;
  margin-top: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 2rpx #c7c7c7;
}
.image_user_me{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.userinfo_vi_me{
  display:flex;
  justify-content:center;
  width:100%;
  height: 160rpx;
  --border: 1px solid red;
}
.username_vi_me{
  display:flex;
  justify-content:center;
  width:100%;
  height: 60rpx;
  --border: 1px solid red;
  text-align: center;
}

.username_me{
  width: 100%;
  height: 40rpx;
  --border: 1px solid red;
  font-size: 14px;
  position: relative;
  float: left;
  margin-top: 10rpx;
  color: dimgray;
}
.bozy_irs_me{
  width: 90%;
  height: 90rpx;
  border-bottom: 1px solid #ededed;
  margin-left: 5%;
  font-size: 14px;
  color: black;
  line-height: 90rpx;
  letter-spacing: 2rpx;
  text-indent:8rpx;
}

.bozy_img_me{
  width: 50rpx;
  height: 50rpx;
  margin-right:10rpx;
  float: right;
  margin-top: 20rpx; 
}

.orderlist_me{
  width: 90%;
  height: 130rpx;
  margin-top: 10rpx;
  --border: 1px solid rebeccapurple;
  margin-left: 5%;
}

.list{
  width: 25%;
  height: 100%;
  float: left;
  --border: 1px solid rebeccapurple;
  border-radius: 5rpx;
  text-align: center;
  position: relative;
}

.list_title{
  color: dimgray;
  font-size: 24rpx;
  line-height: 20rpx;
}

.list_pay{
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid red;
  margin-left: 60%;
  margin-top: 8%;
  background-color: #fff; 
  --display: none;
  color: red;
  font-size: 24rpx;
  line-height: 30rpx;
}